# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET    /                           controllers.SnakesAndLaddersController.indexPage()
GET    /game                       controllers.SnakesAndLaddersController.gamePage()
GET    /websocket                  controllers.SnakesAndLaddersController.socket
GET    /create/:size               controllers.SnakesAndLaddersController.createGame(size: Int)
GET    /start                      controllers.SnakesAndLaddersController.startGame()
GET    /restart                    controllers.SnakesAndLaddersController.restartGame()
GET    /add/:playerName            controllers.SnakesAndLaddersController.addPlayer(playerName: String)
GET    /roll                       controllers.SnakesAndLaddersController.rollDice()
GET    /undo                       controllers.SnakesAndLaddersController.undoLastStep()

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
