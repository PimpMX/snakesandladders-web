# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.SnakesAndLaddersController.index()
GET     /create/:size        controllers.SnakesAndLaddersController.createGame(size: Int)
GET     /save                       controllers.SnakesAndLaddersController.saveGame()
GET     /load                       controllers.SnakesAndLaddersController.loadGame()
GET     /start                      controllers.SnakesAndLaddersController.startGame()
GET     /restart                    controllers.SnakesAndLaddersController.restartGame()
GET     /add/:name                  controllers.SnakesAndLaddersController.addPlayer(name: String)
GET     /roll                       controllers.SnakesAndLaddersController.rollDice()
GET     /undo                       controllers.SnakesAndLaddersController.undoLastStep()
GET     /game                     controllers.SnakesAndLaddersController.gameBoard()



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
